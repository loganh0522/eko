= form_for @interview do |f|
  = text_field_tag :email
  
  - @times.each do |time|   
    %label.time-container{:for => "time_#{time.id}"}
      .dateTime= "#{time.convert_date } #{time.time}"
      = radio_button_tag "time", time.id, false, id: "time_#{time.id}"

  %label.time-container{:for => "n/a"}
    .dateTime None of these times work for me.
    = radio_button_tag "time", "n/a", false, id: "n/a"
  
  = f.hidden_field :user_ids, value: @user_ids
  = f.hidden_field :company_id, value: @company.id
  = f.hidden_field :kind, value: @invitation.kind
  = f.hidden_field :location, value: @invitation.location
  = f.hidden_field :title, value: @invitation.title
  = f.submit "Schedule", class: "btn submit-button"