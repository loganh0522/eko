.navbar-fixed-top 
  .business_nav
    .content
      = link_to admin_jobs_path do
        %img.logo(src="/tmp/logo.jpg")       
      %ul
        %li= link_to "JOBS", admin_jobs_path   
        %li= link_to "COMPANIES", admin_companies_path  
        %li= link_to "USERS", admin_users_path   
        %li= link_to "CANDIDATES"
    .dropdown
      %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
        - if current_user.user_avatar.present? 
          = image_tag current_user.user_avatar.image.small_image, :class => "img dropdown-img"
        - else
          .circle-img= current_user.first_name.first.capitalize
        = current_user.first_name
        %b.caret
      %ul.dropdown-menu.dropdown-menu-right
        %li
          %a= link_to "Job Boards", admin_premium_boards_path
        %li
          %a= link_to "Sign Out", signout_path

