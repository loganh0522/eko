- if !request.subdomain.present? || request.subdomain == 'www' || request.subdomain == 'prod-talentwiz' || request.subdomain == 'dev-talentwiz' || request.subdomain == 'stageing-talentwiz' || request.subdomain == '01d61a28'
  %section#top-header
    - if !logged_in?
      .navbar-static-top
        .homepage_nav
          .content
            = link_to root_path do 
              %img.logo(src="/tmp/logo.jpg")    
            %ul.navbar-right
              %li= link_to "Features", features_plan_hiring_process_path
              %li= link_to "Pricing", pricing_path
              %li= link_to "Login", login_path
              %li= link_to "Sign Up", new_user_path, class: "sign-up-btn"
              %li= link_to "Job Seekers", job_seekers_new_path, class: "job-seeker-btn"
            %img.responsive-menu(src="/tmp/menu.png")  

- else     
  - if logged_in? && current_kind == 'job seeker'
    .career-portal-nav
      .content
        - if @company.job_board.job_board_header.logo.present?
          = link_to root_path do
            %img(src="#{@company.job_board.job_board_header.logo}" class="sub_logo")
        - else
          .brand
            = link_to root_path do
              = @company.name
        %ul
          %li= link_to "Profile", profile_path, :class => ".sub-register-btn", :style => "height: 30px; padding: 10px 20px; width: 40px; border-radius: 5px; border: 1px solid #{@job_board.brand_color}"
          %li= link_to "Sign Out", signout_path, class: "sub-signin-btn"
  - else
    .career-portal-nav   
      - if @company.job_board.job_board_header.logo.present?
        = link_to root_path do
          %img(src="#{@company.job_board.job_board_header.logo}" class="sub_logo")
      - else
        .brand
          = link_to root_path do
            = @company.name
      %ul
        %li= link_to "Sign In", "", :class => "sub-signin-btn", "data-toggle" => "modal", "data-target" => "#SubLoginModal"
        
        %li= link_to "Register", "", :class => ".sub-register-btn", :style => "height: 30px; padding: 10px 20px; width: 40px; border-radius: 5px; border: 1px solid #{@job_board.brand_color}", "data-toggle" => "modal", "data-target" => "#subNewUserModal"
        = render "/sessions/sub_login"
        = render "/users/sub_new_job_seeker"

.responsive-menu-links
  %ul
    = link_to features_plan_hiring_process_path do 
      %li Features
    = link_to pricing_path do
      %li Pricing
    = link_to login_path do
      %li Login
    = link_to new_user_path do 
      %li Sign Up
    %li= link_to "Job Seekers", job_seekers_new_path, class: "job-seeker-btn"



