- if !request.subdomain.present? || request.subdomain == 'www' || request.subdomain == 'prod-talentwiz' || request.subdomain == 'dev-talentwiz' || request.subdomain == 'stageing-talentwiz' || request.subdomain == '69e63bf2'
  %section#top-header.row
    - if !logged_in?
      .navbar-static-top
        .homepage_nav
          .content
            = link_to root_path do 
              %img.logo(src="/tmp/logo.jpg")

            
            %ul.navbar-right
              %li= link_to "Features", features_plan_hiring_process_path
              %li= link_to "Pricing", pricing_path
              %li= link_to "Login", login_path
              %li= link_to "Sign Up", new_user_path, class: "sign-up-btn"
              %li= link_to "Job Seekers", job_seekers_new_path, class: "job-seeker-btn"
            %img.responsive-menu(src="/tmp/menu.png")
    - if logged_in? && current_kind == 'business' && current_company.present?
      .navbar-fixed-top 
        .business_nav
          .content
            = link_to business_jobs_path do
              %img.logo(src="/tmp/logo.jpg")       
            %ul
              %li= link_to "JOBS", business_jobs_path   
              - if permitted_to? :read, :business_candidates
                %li= link_to "CANDIDATES", business_candidates_path   
              - if permitted_to? :read, :business_activities
                %li= link_to "ACTIVITY", business_activities_path    
              - if permitted_to? :read, :business_tasks
                %li= link_to "TASKS", business_tasks_path
              - if permitted_to? :read, :business_clients
                %li= link_to "CLIENTS", business_clients_path if current_company.kind == "recruiter" 
              - if permitted_to? :read, :business_clients
                %li
                  = link_to business_interviews_path do
                    .glyphicon.glyphicon-calendar
              / %li 
              /   = link_to business_notifications_path do
              /     .glyphicon.glyphicon-globe
            = link_to "Post a Job", new_business_job_path, class: "post-job-nav"
          .dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              - if current_user.user_avatar.present? 
                = image_tag current_user.user_avatar.image.small_image, :class => "img dropdown-img"
              - else
                .circle-img= current_user.first_name.first.capitalize
              = current_user.first_name
              %b.caret
            %ul.dropdown-menu.dropdown-menu-right
              - if permitted_to? :manage, @career_portal
                %li
                  %a= link_to "Career Portal", business_job_board_path(current_company.job_board.id)
                %li
                  %a= link_to "Team Members", business_users_path
                %li
                  %a= link_to "Company Details", business_company_path(current_company)
                %li
                  %a= link_to "Hiring Pipeline", business_default_stages_path
                %li
                  %a= link_to "Hiring Defaults", business_hiring_defaults_path
                %li
                  %a= link_to "Templates", business_templates_path
                %li
                  %a= link_to "Subscription", business_plan_path
                %li
                  %a= link_to "Billing", business_customers_path
              %li
                %a= link_to "My Profile", business_user_path(current_user)
              %li
                %a= link_to "Sign Out", signout_path
       
    - if logged_in? && current_kind == 'job seeker' 
      .business_nav
        .content 
          = link_to job_seeker_jobs_path do
            %img.logo(src="/tmp/logo.jpg")
          %ul
            %li= link_to "Jobs", job_seeker_jobs_path
            
        .dropdown
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            - if current_user.user_avatar.present? 
              = image_tag current_user.user_avatar.image.small_image, :class => "img dropdown-img"
            - else
              .circle-img= current_user.first_name.first.capitalize
            = current_user.first_name
            %b.caret
          %ul.dropdown-menu.dropdown-menu-right
            %li
              %a= link_to "Profile", job_seeker_profiles_path
            %li
              %a= link_to "Sign Out", signout_path

- else     
  - if logged_in? && current_kind == 'job seeker'
    .career-portal-nav
      .content
        - if @company.job_board.job_board_header.logo.present?
          = link_to root_path do
            %img(src="#{@company.job_board.job_board_header.logo}" class="sub_logo")
        - else
          .brand
            = link_to root_path do
              = @company.name
        %ul
          %li= link_to "Profile", profile_path, :class => ".sub-register-btn", :style => "height: 30px; padding: 10px 20px; width: 40px; border-radius: 5px; border: 1px solid #{@job_board.brand_color}"
          %li= link_to "Sign Out", signout_path, class: "sub-signin-btn"
  - else
    .career-portal-nav   
      - if @company.job_board.job_board_header.logo.present?
        = link_to root_path do
          %img(src="#{@company.job_board.job_board_header.logo}" class="sub_logo")
      - else
        .brand
          = link_to root_path do
            = @company.name
      %ul
        %li= link_to "Sign In", "", :class => "sub-signin-btn", "data-toggle" => "modal", "data-target" => "#SubLoginModal"
        
        %li= link_to "Register", "", :class => ".sub-register-btn", :style => "height: 30px; padding: 10px 20px; width: 40px; border-radius: 5px; border: 1px solid #{@job_board.brand_color}", "data-toggle" => "modal", "data-target" => "#subNewUserModal"
        = render "/sessions/sub_login"
        = render "/users/sub_new_job_seeker"

.responsive-menu-links
  %ul
    = link_to features_plan_hiring_process_path do 
      %li Features
    = link_to pricing_path do
      %li Pricing
    = link_to login_path do
      %li Login
    = link_to new_user_path do 
      %li Sign Up
    %li= link_to "Job Seekers", job_seekers_new_path, class: "job-seeker-btn"



