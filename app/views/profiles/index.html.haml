.job-seeker-profile-subdomain
  .profile-background-photo
  .user-image
    - if current_user.user_avatar.present? 
      = image_tag @avatar.image.large_image if @avatar.present?
      = link_to  '#', :data => {:toggle => "modal", :target => "#profile-picture-modal"} do
        .edit-photo Edit Profile Picture
      = render 'job_seeker/profiles/profile_picture'
    - else      
      = link_to '#', :data => {:toggle => "modal", :target => "#profile-picture-modal"} do
        %img(src="/tmp/blank_profile_picture.png")
        .add-photo Add Profile Picture
      = render 'job_seeker/profiles/profile_picture' 
  .personal-details
    .main-details
      .name= "#{current_user.full_name}"
      .icon-detail
        %img(src="/tmp/black-small-location.png") 
        = "Toronto, On, Canada"
      .icon-detail
        %img(src="/tmp/black-small-e-mail-envelope.png") 
        = "#{current_user.email}"
      .icon-detail
        %img(src="/tmp/black-small-phone-call.png") 
        = "#{current_user.phone}"
        

      
  /       .current_experience
  /         .bold Current Role 
  /         %br
  /         .shift= "Founder - TalentWiz.com" 
  /       .current_education
  /         .bold Education 
  /         %br
  /         .shift= "Queen's - Bachelor of Commerce"
  .job-seeker-nav
    .user-profile-nav-subdomain
      %ul
        %li.experience-tab.active-subdomain Experience 
        %li.education-tab Education      
        %li.skills-tab Certifications
        %li.my-apps-tab My Applications
  
  .main-body
    .sidebar
      .header
        .title Skills
      = render "job_seeker/user_skills/form"
      .sidebar-container
        - if current_user.user_skills.count == 0
          .skills-not-present
            %p No Skills Listed
        - else
          = render 'job_seeker/user_skills/skills'
        
    .main-container
      .experience-container#showing
        .header
          .title Experience
          .new_experience
            = link_to "+ Add Experience", new_job_seeker_work_experience_path, :data => {:remote => true}, :html => {id: 'new_work_exp'}
        .body
          - if current_user.work_experiences.count == 0
            .not-present-container#not-present
              %p You currently do not have any listed work experiences. 
              = link_to "+ Add Work Experience", new_job_seeker_work_experience_path, :data => {:remote => true}, class: 'add-object'
          - else
            = render 'job_seeker/work_experiences/experience'

      .education-container
        .header
          .title Education
          .new_experience
            = link_to "+ Add Education", new_job_seeker_education_path, :data => {:remote => true}
        .body
          - if current_user.educations.count == 0
            .not-present-container#not-present
              %p You currently do not have any listed work experiences. 
              = link_to "+ Add Education", new_job_seeker_education_path, :data => {:remote => true}, class: 'add-object'               
          - else 
            = render 'job_seeker/educations/education_history'
           
      .skills-container
        .header
          .title Certifications
          .new_experience
            = link_to "+ Add Certification", new_job_seeker_user_certification_path, :data => {:remote => true} 
        .body#certification-body
          - if @certifications.count == 0
            .not-present-container#not-present
              %p You currently do not have any certifications listed. 
              = link_to "+ Add Certification", new_job_seeker_user_certification_path, :data => {:remote => true} , class: 'add-object'
          - else 
            = render 'job_seeker/user_certifications/certifications'
               



      .career-prefs-container
        .header
          .title Career Preferences
        .body
          - if current_user.educations.nil?        
            
          - else 
            .not-present-container
              %p You currently do not have any career preferences. 
              = link_to "+ Add Preferences", new_job_seeker_education_path, :data => {:remote =>  true}, class: 'add-object'
      
      .my-apps-container
        .header
          .title Applications
        .body
          - if current_user.educations.nil?        
            
          - else 
            .not-present-container
              %p You currently do not have any applications in progress. 
                  
    
    .modal
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
            %h4.modal-title  
          .modal-body
