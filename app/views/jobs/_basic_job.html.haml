.company-job-board  
  - if @company.logo.present?
    .logo
      = link_to root_path do
        %img(src="#{@company.logo.file.large_logo}")
  .basic-job-description

    .job-header
      %h2= @job.title
      = "#{@job.location}"
    .main-container
      .job-body
        = @job.description.html_safe
    .side-container
      .apply 
        = render "apply_method"