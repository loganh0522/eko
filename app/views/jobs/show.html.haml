- if @job_board.cover_photo.present? 
  .job-board-header{:style => "background-image: url(#{@job_board.cover_photo.url})"}
    .intro-message
      .header= @job.title
      .sub-header= @job.location
- else
  .job-board-header{:style => "background-color: #EF7B2B"}
    .intro-message
      .header= @job.title
      .sub-header= @job.location
.career-portal-job-container
  .job-description
    .job-header
      %h1= @job.title
      = "#{@job.location}"
    .job-body
      %p= simple_format(@job.description)
    .apply 
      = render "apply_method"
  
  .extra-job-details
    .apply 
      = render "apply_method"

   
    %h3 Job Details 
    .detail
      .type Industry
      .content= @job.job_industries.first.industry.name
    .detail
      .type Career Level 
      .content= @job.career_level
    .detail
      .type Posted
      .content= "#{time_ago_in_words(@job.created_at)} ago"

  
    
    


