.career-portal-job-container
  .job-description
    .job-header
      %h1= @job.title
      = "#{@job.city}, #{@job.states.first.name} - #{@job.job_kind.first.name}"
    .job-body
      %p= simple_format(@job.description)

  .extra-job-details
    %h3 Job Details 
    .detail
      .type Industry
      .content= @job.job_industries.first.industry.name
    .detail
      .type Career Level 
      .content= @job.job_career_level.first.career_level.name
    .detail
      .type Salary
      .content= "$60,000 - $100,000"
    .detail
      .type Posted
      .content= "#{time_ago_in_words(@job.created_at)} ago"

    
    .apply 
      - if current_user.present?
        - if @job.questionairre.present? 
          = link_to "Apply to this Job", new_job_seeker_question_answer_path, {:class => "app-btn", :data => {:toggle => "modal", :target => "#applyModal"}}
          = render 'job_seeker/jobs/apply'
        - else
          = bootstrap_form_for [:job_seeker, @application] do |f|
            .fieldset
              .form-group.col-md-12
              = f.hidden_field :user_id, value: current_user.id
              = f.hidden_field  :job_id, value: @job.id
              = f.submit "Apply to Job", class: "btn btn-primary app-btn"
      - else 
        = link_to "Apply to Job", login_path, class: "btn btn-primary app-btn"

