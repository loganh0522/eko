%section.well.col-md-8.col-md-offset-2
  .row
  = form_tag '/login' do
    %header
      %h1 Log In
    %fieldset.col-md-8.vertical-form
      = label_tag :email, "E-mail Address"
      = email_field_tag :email
      %br
      = label_tag :password
      = password_field_tag :password
    %fieldset.actions.control-group.row.col-md-8.col-md-offset-6
      .controls
        %input(type="submit" value="Log In" class="btn")