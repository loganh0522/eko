<% if @work_experience.valid? %>
  $('#new_work_experience').parent().remove();
  $('#new_work_exp').show();
  $('#work_experiences').html('<%= j render "job_seeker/work_experiences/experience" %>');
<% else %>
  $(".notice").remove();
  $('.form-group').removeClass('has-error');

  <% if @errorTitle[0] != nil %>
    $("#title_Block").append('<div class="notice"><%= escape_javascript(@errorTitle[0])%></div>')
    $("#title_Block").parent().find('.form-group').addClass('has-error');
  <%end%>

  <% if @errorCompany[0] != nil %>
    $("#company_name_Block").append('<div class="notice"><%= escape_javascript(@errorCompany[0])%></div>');
    $("#company_name_Block").parent().find('.form-group').addClass('has-error');
  <%end%>

  <% if @errorStartMonth[0] != nil %>
