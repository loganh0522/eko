    $("#start_month_Block").parent().find('.form-group').addClass('has-error');
  <%end%>

  <% if @errorStartYear[0] != nil %>
    $("#start_year_Block").append('<div class="notice"><%= escape_javascript(@errorStartYear[0])%></div>');
    $("#start_year_Block").parent().find('.form-group').addClass('has-error');
  <%end%>

  <% if @errorEndMonth[0] != nil %>
    $("#end_month_Block").append('<div class="notice"><%= escape_javascript(@errorEndMonth[0])%></div>');
    $("#end_month_Block").parent().find('.form-group').addClass('has-error');
  <%end%>

  <% if @errorEndYear[0] != nil %>
