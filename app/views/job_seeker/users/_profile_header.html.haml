.profile-header
  = render 'job_seeker/user_avatars/user_avatar'
  .personal-details
    = link_to edit_job_seeker_user_path(current_user), remote: true do
      %i.glyphicon.glyphicon-pencil
    .name= "#{current_user.full_name}"
    .contact-details= "#{current_user.email} | #{current_user.phone}"
    .location= current_user.location if current_user.location.present?
    .social-links
      - if @social_links.present?
        - @social_links.each do |link|
          = link_to link.url, target: :_blank do 
            %span.fa-stack
              %i.fa.fa-square-o.fa-stack-2x
              %i{class: "fa fa-#{link.kind.downcase} fa-stack-1x"}
  .user-summary
    = current_user.tag_line   
  .change-containers-nav
    %ul
      = link_to job_seeker_user_path(current_user) do
        %li{:class => is_active?(job_seeker_user_path(current_user))} Profile
      = link_to job_seeker_projects_path do
        %li{:class => is_active?(job_seeker_projects_path)} Portfolio
      = link_to job_seeker_applications_path(current_user) do
        %li{:class => is_active?(job_seeker_applications_path(current_user))} My Applications
        