<% if current_user.certifications.count == 0 %>
  $('<%= j render "job_seeker/user_certifications/form" %>').insertAfter('#certification-header')
  $('.not-present-container').remove()
  $('#new_user_certification_button').hide();
<% else %>
  $('<%= j render "job_seeker/user_certifications/form" %>').insertBefore("#certifications");
  $('#new_user_certification_button').hide();
<% end %>