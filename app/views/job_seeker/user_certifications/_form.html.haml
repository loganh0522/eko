.work-experience
  = bootstrap_form_for [:job_seeker, @profile, @user_certification], html: {remote: true, class: 'profile-form'} do |f|
    .row
      .col-md-12
        = f.text_field :name, :class => 'ui-autocomplete-input', :placeholder => 'Certification Name', id: "certification_name", hide_label: true
        %span#name_Block.help-block
    .row
      .col-md-12
        = f.text_field :agency, placeholder: "Agency", hide_label: true
        %span#agency_Block.help-block
    .row
      .col-md-12
        = f.text_area :description, placeholder: "Description", hide_label: true
    .row
      .col-md-3.col-sm-6.col-xs-6
        = f.select :start_month, ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'Novemeber', 'December'], include_blank: "Select a Month", label: "Date of Certification"
        %span#start_month_Block.help-block
      .col-md-3.col-sm-6.col-xs-6
        = f.text_field :start_year
        %span#start_year_Block.help-block
      .col-md-3.col-sm-6.col-xs-6
        = f.select :end_month, ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'Novemeber', 'December'], include_blank: "Select a Month", label: "Expiration Date"
        %span#end_month_Block.help-block
      .col-md-3.col-sm-6.col-xs-6
        = f.text_field :end_year
        %span#end_year_Block.help-block
    .row 
      .col-sm-6.col-md-offset-6
        = f.check_box :expires, checked_value: 1, unchecked_value: 0, label: "No expiration"
    = f.submit @user_certification.new_record? ? "Add Certification" : "Update", class: "submit btn btn-primary"
    
    - if !@user_certification.new_record?
      .close-form#edit-form.btn.btn-default     
        Close
    - else
      .close-form#new-form.btn.btn-default     
        Close
    - if !@user_certification.new_record?
      = link_to "Remove Certification", job_seeker_profile_user_certification_path(@profile, @user_certification), remote: true, method: :delete