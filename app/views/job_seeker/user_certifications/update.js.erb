<% if @errors.present? %>
  <% @errors.each do |error| %>
    $('#<%= error[0] %>_msgBlock').append('<div class="notice"><%= escape_javascript(error[1]) %></div>');
    $('#<%= error[0] %>_Block').addClass('has-error');
  <% end %>
<%else %> 
  $('#basic-form-modal').modal("toggle");
  $('#user_certification_<%= @certification.id %>').replaceWith('<%= j render (@certification), certification: @certification %>');
<%end%>
