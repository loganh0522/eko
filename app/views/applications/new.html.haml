.company-job-board  
  - if @company.job_board.job_board_header.logo.present?
    .logo
      = link_to root_path do
        %img(src="#{@company.job_board.job_board_header.logo.large_logo}")
  .career-portal-job-container
    .application-form
      .job-header
        %h2= @job.title
      .application-header
        %h2 Application Form
        %p Please finish the following questions to apply to this job.
      .application-body
        = render 'form'