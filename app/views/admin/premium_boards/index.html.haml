.page-header
.company-settings
  .side-container
    = render 'admin/shared/admin_sidebar'
  .main-container
    .standard-header
      %h3 Premium Boards
      = link_to "+ Job Board", new_admin_premium_board_path, :data => {:remote => true }, class: "btn border-button2"
    

    #premium-boards
      - @job_boards.each do |board| 
        .job-feed-container
          = link_to "Edit", edit_admin_premium_board_path(board.id), :data => {:remote => true }
          .header
            = image_tag board.logo.small_image if board.logo.present? 
          .body 
            - board.posting_durations.each do |duration|
              .duration-name= duration.name
              = duration.price







