.home-intro-header
  .intro-message 
    .header
      Contact Us 
    .sub-header 
      We would love to talk to you. Please get in touch with us.    

#feature-section-right
  .description
    %h2 Get in Touch
    %p Send us a message and we will be more than happy to give you a call.
    
    = form_for @contact do |f|
      = f.text_field :first_name, placeholder: "First Name", autocomplete: false, hide_label: true
      = f.text_field :last_name, placeholder: "Last Name", autocomplete: false, hide_label: true
      = f.text_field :email, placeholder: "E-mail", autocomplete: false, hide_label: true
      = f.text_field :phone, placeholder: "Phone Number", autocomplete: false, hide_label: true
      = f.text_field :company, placeholder: "Company Name", autocomplete: false, hide_label: true
      = f.text_area :message, placeholder: "Message", autocomplete: false, hide_label: true
      = f.submit "Submit Message", class: "btn submit-button"
  
  .image
    %h2 Sales
    %p Have some questions about us, our sales team has your answers. Feel free to reach out to our friendly sales people.
    %p sales@talentwiz.ca

    %h2 Support
    %p Need some help getting setting up? Or just need some help, send a message to our support team. They would love to help you out.
    %p support@talentwiz.ca  

= render "shared/bottom_header"

