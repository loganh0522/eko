.home-intro-header
  .intro-message 
    .header
      Contact Us 
    .sub-header 
      We would love to talk to you. Please get in touch with us.    

#feature-section-right
  .description
    %h2 Get in Touch
    %p Send us a message and we will be more than happy to give you a call.
    = form_tag send_multiple_messages_business_applications_path do 
      = text_field_tag :first_name, nil, placeholder: "First Name", autocomplete: false
      = text_field_tag :last_name, nil, placeholder: "Last Name", autocomplete: false
      = text_field_tag :email, nil, placeholder: "E-mail", autocomplete: false
      = text_field_tag :phone, nil, placeholder: "Phone Number", autocomplete: false
      = text_area_tag :message, nil, placeholder: "Message"    
      = submit_tag "Submit Message", class: "btn submit-button"
  
  .image
    %h2 Sales
    %p Get in touch with sales, we will get back to asap. 
    %p sales@talentwiz.ca

    %h2 Support
    %p Get in touch with sales, we will get back to asap. 
    %p support@talentwiz.ca  

= render "shared/bottom_header"

