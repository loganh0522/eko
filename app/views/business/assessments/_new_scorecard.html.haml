.modal-body
  - if @application.present?
    = link_to "Create from Scratch", new_business_application_assessment_path(@application), remote: true, class: "btn border-button"
    - @templates.each do |template| 
      = link_to "#{template.name}", business_application_create_from_template_path(template: template.id), class: "template-container", remote: true, method: :post
  - else 
    = link_to "Create from Scratch", new_business_candidate_assessment_path(@candidate), remote: true, class: "btn border-button"
    - @templates.each do |template| 
      = link_to "#{template.name}", business_candidate_create_from_template_path(template: template.id), class: "template-container", remote: true, method: :post



.modal-footer
  .btn.border-button.close-modal Cancel