.question-area 
  .fieldset      
    .answer-type
      .title Question Type:
      = f.select :kind, ['Text (150 Characters)', 'Text (500 Characters)', 'Yes / No', 'Select', 'Multiselect', 'File'],{}, {:class => 'question-type'}
      .required-answer
        = f.check_box :required, checked_value: true, unchecked_value: false
        = f.label :required, "Required"     
    = f.text_field :body, id: "body_Block", class: "question-field", placeholder: "Add your Question", autocomplete: 'off'
    = f.text_area :guidelines, placeholder: "Provide the interviewer with some guidelines as to what they should be looking for in an answer" 

    %span#body_msgBlock
    = f.hidden_field :_destroy 
    = f.fields_for :question_options, class: "options" do |a|
      = render 'question_option_fields', f: a
  = link_to_add_fields("+ Add Answer", f, :question_options)