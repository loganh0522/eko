.interview-scorecard
  .header
    %h4= "#{@completed_assessment.user.full_name} - #{@completed_assessment.assessment.name}"
    / .my-scorecard
    /   = current_user_interview_scorecard(current_user, @application)
    %i.fa.fa-angle-up.toggle
  
  .scorecard-details
    - @assessment.scorecard.scorecard_sections.each do |section|
      - section.section_options.each do |criteria|
        .form-row#no-padding
          .question-header
            .question= criteria.body 
            - criteria.answers.each do |rating|
              - if rating.rating == 1 && rating.user == @completed_assessment.user
                .scorecard-inputs
                  %i.glyphicon.glyphicon-remove
              - elsif rating.rating == 2 && rating.user == @completed_assessment.user
                .scorecard-inputs
                  %i.glyphicon.glyphicon-thumbs-down
              - elsif rating.rating == 3 && rating.user == @completed_assessment.user
                .scorecard-inputs
                  %i.glyphicon.glyphicon-thumbs-up

              - elsif rating.rating == 4 && rating.user == @completed_assessment.user
                .scorecard-inputs
                  %i.glyphicon.glyphicon-star
              %br
          .question-header
            - criteria.answers.each do |rating|
              - if rating.user == @completed_assessment.user
                .content= rating.body
    .form-row#no-padding
      .question-header
        .question Feedback
        %br
        .content= @completed_assessment.feedback
        .content= @completed_assessment.overall