.activity{:id => activity.action, :class => "#{activity.trackable_type} job_#{activity.job_id}"}      
  .icon
    .glyphicon.glyphicon-pencil

  .activity-body
    .activity-body-header
      - if activity.user.user_avatar.present?
        = image_tag activity.user.user_avatar.image.small_image, :class => 'circle', :size => "50x50"
      - else 
        .circle-img
          %img(src="/tmp/little-man.png") 
      .content 
        = "#{activity.user.first_name} #{activity.user.last_name}"
        added a comment on 
        = link_to "#{activity.trackable.application.applicant.first_name} #{activity.trackable.application.applicant.last_name}'s application", business_job_application_path(activity.trackable.application.apps.id, activity.trackable.application.id)     
        %br
        .time= "#{time_ago_in_words(activity.created_at)} ago" 
    .activity-body-body
      = activity.trackable.body

    