<% if params[:application_id].present?  %>
  $('.applicant-profile').html('<%= j render "business/activities/application_activity" %>');
  $('.applicant-nav').find('.activated').removeClass('activated');
  $('.applicant-nav').find('#activity').addClass('activated');
<% else %> 
  $('#main-container').html('<%= j render "business/activities/job_activity_feed" %>');
  $('.change-containers-nav').find('.activated').removeClass('activated');
  $('.change-containers-nav').find('#job-activity-feed').addClass('activated');
<% end %>