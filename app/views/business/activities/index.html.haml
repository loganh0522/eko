.page-header
  %h1 Activity
#activity-container
  .main-container
    .activity-feed
      - @activities.each do |activity|         
        = render "business/activities/#{activity.trackable_type.underscore}/#{activity.action}", activity: activity
  .side-container
    .activity-filters
      .header 
        %h4 Filters
      .body
        %ul
          %li.activity 
            .checkbox{:data => {:id => "comments"}}= check_box_tag "", true, true
