.page-header
  %h2 Calendar
  
#main-container
  #padding
    .side-container
      = render 'business/interviews/filters'
    .main-container
      .actions
        = link_to "Send Invitation", new_business_interview_invitation_path,  data: {:turbolinks => "false"}, remote: true, class: "btn border-button"
      #calendar-container
        = render 'business/interviews/interviews'

.modal#basic-form-modal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title