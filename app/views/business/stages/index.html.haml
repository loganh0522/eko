= render 'business/applications/top_container'

#main-container
  #padding
    .side-container#job-nav
      = render 'business/shared/post_job' 
    .main-container#main-border
      .standard-header
        %h3 Recruitment Process
        = link_to 'Add Stage', new_business_job_stage_path(@job), class: "btn border-button", remote: true
      .stages    
        .stage 
          .stage-header
            Applied
          .stage-body
          .stage-footer
            = link_to "+ Add Interview", new_business_stage_action_path(kind: 'interview'), remote: true
            = link_to "+ E-mail", new_business_stage_action_path(kind: 'email'), remote: true
            = link_to "+ Add Task", new_business_stage_action_path(kind: 'task'), remote: true
        = render "stages", stages: @stages
        
        .stage 
          .stage-header
            Hired
          .stage-body
          .stage-footer
            = link_to "+ Add Interview", new_business_stage_action_path(kind: 'interview'), remote: true
            = link_to "+ E-mail", new_business_stage_action_path(kind: 'email'), remote: true
            = link_to "+ Add Task", new_business_stage_action_path(kind: 'task'), remote: true
        .stage 
          .stage-header
            Rejected
          .stage-body
          .stage-footer
            = link_to "+ Add Interview", new_business_stage_action_path(kind: 'interview'), remote: true
            = link_to "+ E-mail", new_business_stage_action_path(kind: 'email'), remote: true
            = link_to "+ Add Task", new_business_stage_action_path(kind: 'task'), remote: true
            
                


