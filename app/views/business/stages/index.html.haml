= render 'business/applications/top_container'

#main-container
  #padding
    .side-container#job-nav
      = render 'business/shared/post_job' 
    .main-container#main-border
      .standard-header
        %h3 Recruitment Process
        = link_to 'Add Stage', new_business_job_stage_path(@job), class: "btn border-button", remote: true
      .stages    
        .stage 
          .stage-header
            All Applicants 

        = render "stages", stages: @stages

        .stage 
          .stage-header
            Rejected

.modal#basic-form-modal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title

= render 'business/shared/newModal'
