= form_for [:business, @job, @stage], html: {remote: true, class: 'invite'} do |f|
  %fieldset
    .row
      .form-group.col-md-8
        = f.text_field :name, class: "form-control", placeholder: "Name"
        = f.hidden_field :job_id, value: @job.id
        = f.hidden_field :position, value: 1
        = f.submit @stage.new_record? ? "Create Stage" : "Update Stage", class: "submit btn btn-primary"