.page-header
  %h2 Admin 
  .admin-nav
    %ul
      %li= link_to "Career Portal", business_job_board_path(current_company.job_board.id)
      %li= link_to "Templates", business_email_templates_path
      %li= link_to "Settings", business_company_path(current_company), class: 'active'

.company-settings
  .side-container#job-nav
    = render 'business/shared/admin_sidebar'
  .main-container
    .user-profile-header
      = render 'business/user_avatars/user_avatar'
      .user-info
        %h3= current_user.full_name
        = current_user.email
      .profile-actions
        .link1= link_to "Edit Profile", edit_business_user_path(@current_user),  class: "btn border-button", :data => {remote: true}
        .link2= link_to "Change Password", edit_business_user_path(@current_user, password: 'password'), :data => {remote: true}, class: "btn border-button"
    .standard-body
      .standard-body-header
        %h4 Sync E-mail
        - if current_user.outlook_token.present? 
          .sync-email
            .sync-box#synced
              %img(src="/tmp/outlook_logo.jpeg")
              Synced Outlook
          .sync-email
            .sync-box 
              %img(src="/tmp/gmail_icon.png")
              Sync Gmail  
        - elsif current_user.google_token.present? 
          .sync-email
            .sync-box
              %img(src="/tmp/outlook_logo.jpeg")
              Sync Outlook
          .sync-email
            .sync-box#synced
              %img(src="/tmp/gmail_icon.png")
              Synced Gmail 
        - else 
          .sync-email
            = link_to "#{@login_url}" do
              .sync-box 
                %img(src="/tmp/outlook_logo.jpeg")
                Sync Outlook
          .sync-email
            = link_to '/auth/google_oauth2' do 
              .sync-box 
                %img(src="/tmp/gmail_icon.png")
                Sync Gmail    
        
            
        
      
