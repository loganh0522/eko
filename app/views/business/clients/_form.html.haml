= bootstrap_form_for [:business, @client], remote: true do |f|
  .modal-body
    .fieldset
      .form-group
        = f.text_field :company_name, class: "form-control", label: "Company Name"
      .form-group
        = f.text_field :website, class: "form-control", label: "Website"
      .form-group
        = f.text_field :address, class: "form-control", id: "geocomplete2", label: "Address", placeholder: "Enter the Address"
  .modal-footer
    %fieldset
      = f.hidden_field :user_id, value: current_user.id
      = f.hidden_field :company_id, value: current_company.id
      = f.submit "Save Client", class: "btn submit-button"
      .btn.border-button2{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Cancel