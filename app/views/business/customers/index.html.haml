.company-settings
  .side-container
    = render 'business/shared/admin_sidebar'
  .main-container 
    .standard-header
      %h2 Billing Information
    - if current_company.customer.present? 
      %h4 Credit Card 
      %p= "xxxx xxxx xxxx #{current_company.customer.last_four}"
      %h4 Expires 
      %p= "#{current_company.customer.exp_month} / #{current_company.customer.exp_year}"
      = link_to 'Update Billing Information', edit_business_customer_path(current_company.customer.id), class: 'btn btn-primary', remote: true
    - else
      .not-present-container
        %p There are currently no notes for this applicant. 
        .add-object= link_to  "Add Billing Information", '#', class: "btn active-application-button move-applicants", id: "stage", :data => {:toggle => "modal", :target => "#createBillingDetails"}

.modal#createBillingDetails
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title Billing Details
      = render 'business/customers/form'

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript">
Stripe.setPublishableKey("#{ENV['STRIPE_PUBLISHABLE_KEY']}");
</script>
= javascript_include_tag 'payment'