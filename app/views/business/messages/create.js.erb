<% if @errors.present? %> 
  <% @errors.each do |error| %> 
    <% if error[0] == "body" %>  
      $('trix-editor').addClass('has-error');
    <% else %>
      $('.<%= error[0] %>_Block').addClass('has-error');
    <% end %>
  <% end %>
<% else %>
  $('.action-area').children().remove();
<% end %> 



