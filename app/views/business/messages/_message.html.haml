.modal#messageModal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title Send Message        
      .modal-body
        = "To: #{@user.first_name} #{@user.last_name}"
        %br
        = form_for [:business, @job, @application, @message] do |f| 
          %fieldset
          = f.text_area :body, size: "12x12", class: "wysihtml5 form-control"
          = hidden_field_tag :user_id, current_user.id
          %br
          = f.submit "Send Message", class: "btn btn-primary"

