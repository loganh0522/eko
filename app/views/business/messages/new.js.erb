<% if params[:candidate_id].present? %> 
  $('.action-area').html('<%= j render "business/messages/form" %>');
  $('.active-button').removeClass('active-button');
  $('#add-message').addClass('active-button');
<% elsif params[:client_contact_id].present? %>
  $('.action-area').html('<%= j render "business/messages/client_contact_form" %>');
  $('.application-actions').find('.active-button').addClass('inactive-button');
  $('.application-actions').find('.active-button').removeClass('active-button');
  $('.application-actions').find('#add-note').addClass('active-button');
  $('.application-actions').find('#add-note').removeClass('inactive-button');
<% end %>




