.modal#send_messageModal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title Send Message        
      .modal-body
        .to To: 
        .recipients 
          
        .email_variables
          .to Insert:
          = select_tag "insert-fluid-variable", options_for_select([ "Applicant First Name", "Applicant Last Name", "Job Title", "Company Name" ] )
        = form_tag send_multiple_messages_business_applications_path do 
          .modal-body
            %fieldset
            = text_area_tag :body, nil, rows: 12, cols: 12, id: "message-body"
            = hidden_field_tag :applicant_ids
          .modal-footer
            %input(type="submit" value="Send Message" class="btn btn-success")