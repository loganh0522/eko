.modal#send_messageModal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title Send Message        
      .modal-body
        = form_tag send_multiple_messages_business_job_applications_path(@job.id) do
          %fieldset
          = text_area_tag :body, nil, rows: 10, cols: 75
          = hidden_field_tag :applicant_ids
        %input(type="submit" value="Send Message" class="btn btn-primary")