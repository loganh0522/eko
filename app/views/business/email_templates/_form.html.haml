= form_for [:business, @email_template], html: {remote: true, class: 'invite'} do |f|
  .email-area
    .modal-body  
      .subject
        .title Title
        .sender= f.text_field :title, id: "message-subject", placeholder: "Type Subject Here", autocomplete: false, class: "title_Block"
      .subject
        .title Subject
        .sender= f.text_field :subject, id: "message-subject", placeholder: "Type Subject Here", autocomplete: false, class: "subject_Block"
        %span#subject_msgBlock
      .email-variables
        .show-hidden-search-box
          .plain-text
            Insert-Token
        .hidden-search-box
          .insert-tokens
            .insert-token#first-name Candidate First Name
            .insert-token#last-name Candidate Last Name
            .insert-token#full-name Candidate Full Name
            .insert-token#company-name Company Name
            .insert-token#job-title Job Title
      .email-content
        = f.trix_editor :body
    .modal-footer
      = f.hidden_field :user_id, value: current_user.id
      = f.hidden_field :company_id, value: current_company.id
      = submit_tag "Save E-mail", class: "btn submit-button"
      .btn.border-button2{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Cancel
  