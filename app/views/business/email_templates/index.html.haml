.page-header
  %h1 Templates
.company-settings
  .side-container
    = render 'business/shared/admin_sidebar'
  .main-container
    %h2 Templates
    .templates-header
      %h4 E-mail Templates
      = link_to "+ Add E-mail Template", new_business_email_template_path, :data => {:remote => true } 
    .templates-body
      = render "business/email_templates/email_templates", email_templates: @email_templates

    .templates-header
      %h4 Rejection Reasons
      = link_to "Create Reason", new_business_rejection_reason_path, :data => {:remote => true } 
    .templates-body#reasons
      = render "business/rejection_reasons/rejection_reasons", rejection_reasons: @rejection_reasons
   
= render "business/email_templates/email_template_modal"

.modal#basic-form-modal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title