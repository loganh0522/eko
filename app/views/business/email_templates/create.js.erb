<% if @errors.present? %> 
  <% @errors.each do |error| %> 
    <% if error[0] == "body" %>  
      $('trix-editor').addClass('has-error')
    <% else %>
      $('.<%= error[0] %>_Block').append('<div class="notice"><%= escape_javascript(error[1]) %></div>');
      $('.<%= error[0] %>_Block').addClass('has-error');
    <% end %>
  <% end %>
<% else %>
  $('.modal').modal('toggle');
  $('.stages').html('<%= j render "email_templates", email_templates: @email_templates%>');
<% end %>