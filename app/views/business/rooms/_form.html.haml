= form_for [:business, @room], remote: true do |f|
  .modal-body
    = f.text_field :name, class: "form-control", placeholder: "Name", autocomplete: "off", id: "name_Block"
    %span#name_msgBlock
    = f.text_field :email, class: "form-control", placeholder: "E-mail", autocomplete: "off", id: "email_Block"
    %span#email_msgBlock
  .modal-footer
    = f.hidden_field :company_id, value: current_company.id
    = f.submit "Create Room", class: "btn submit-button"
    .btn.border-button2{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Cancel