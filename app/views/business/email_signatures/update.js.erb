<% if @errors.present? %>
  <% @errors.each do |error| %>
    $('#<%= error[0] %>_msgBlock').append('<div class="notice"><%= escape_javascript(error[1]) %></div>');
    $('#<%= error[0] %>_Block').addClass('has-error');
  <% end %>
<% else %> 
  $('.email-signature-form').hide(); 
  $(".e-mail-signature").find('.signature').show();
  $(".e-mail-signature").find('.signature').html('<%= j render "business/email_signatures/signature", signature: @signature%>')
<% end %>