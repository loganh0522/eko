#calendar-container
  .body
    #articles      
      %h2#month
        = link_to "<", date: @date.prev_month, remote: true
        = @date.strftime("%B %Y")
        = link_to ">", date: @date.next_month, remote: true
      = month_calendar @date do |date| 
        = date.day 
        - if @interviews_by_date[date]
          %ul
            - @interviews_by_date[date].each do |interview| 
              %li
                = interview.kind


#calendar-container
    .body
      #articles      
        %h2#month
          = link_to "<", date: @date.prev_month, remote: true
          = @date.strftime("%B %Y")
          = link_to ">", date: @date.next_month, remote: true
        = month_calendar @date do |date| 
          = date.day 
          - @interviews.each do |interview|
            - if interview.start.date_time.to_date == date
              %ul
                %li
                  = interview.subject

        = week_calendar @date do |date|
        - hours = %w[12a 1a 2a 3a 4a 5a 6a 7a 8a 9a 10a 11a 12p 1p 2p 3p 4p 5p 6p 7p 8p 9p 10p 11p]
        - start_date = params.fetch(:start_date, Date.today).to_date
        - date_range = (start_date.beginning_of_week..start_date.end_of_week).to_a
        
        %table 
          %thead
            %tr
              %th
              - date_range.slice(0..7).each do |day| 
                %th= I18n.t("date.day_names")[day.wday]
          %tbody
            - hours.each do |time| 
              %tr
                %th= "#{time}"
                - @interviews.each do |interview|
                  - if @interviews.first.start.date_time.to_datetime.strftime("%I:%M %P") == date
                %th 
                %th    
                %th   
                %th    
                %th 
                %th 
 