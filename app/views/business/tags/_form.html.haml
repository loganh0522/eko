= form_for [:business, @tag], remote: true do |f|
  = f.text_field :name, :class => 'ui-autocomplete-input tags', :placeholder => 'Add a Tag', id: "tag_name", hide_label: true
  #search-results-tags  
  = f.hidden_field :candidate_id, value: @candidate.id
  = f.hidden_field :company_id, value: current_company.id
  = hidden_field_tag :tag_id
  = f.button "Add", class: "btn submit-button", data: {disable_with: "<i class='fa fa-spinner fa-spin'> </i> Saving..."}

