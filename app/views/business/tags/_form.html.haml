= form_for [:business, @tag], remote: true do |f|
  .row
    .col-md-6
      = f.text_field :name, :class => 'ui-autocomplete-input tags', :placeholder => 'Tag', id: "tag_name", hide_label: true
      #search-results-tags 
    .col-md-6
      = f.hidden_field :candidate_id, value: @candidate.id
      = f.hidden_field :company_id, value: current_company.id
      = hidden_field_tag :tag_id
      = f.submit "Add Tag", class: "btn submit-button"
      .close-form     
        .border-button Close

  