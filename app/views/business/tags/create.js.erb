<% if params[:applicant_ids].present? %>
  $('#tag_name').val('')
  $('.multi-form').modal("toggle");
  $('.multi-form').find('.recipients').children().remove();
  $('.multi-form').find('#applicant_ids').val('');
<% else %>
  $('.tags').html('<%= j render "business/tags/tags", tags: @tags %>');
  $('#add_tag').show();
  $('.tag_form').hide();
<% end %>
