= form_for [:business, @tag], html: {remote: true, class: 'tag_form', id: "multiForm"} do |f|
  .modal-body     
    .recipients Add Tag To: 
    = f.text_field :name, :class => 'ui-autocomplete-input tags', :placeholder => 'Add a Tag', id: "tag_name", hide_label: true
    #search-results-tags  
  .modal-footer
    = hidden_field_tag :applicant_ids
    = hidden_field_tag :tag_id
    = f.submit "Add Tag", class: "btn submit-button"
    .btn.border-button.close-modal Cancel