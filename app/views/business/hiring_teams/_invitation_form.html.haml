.modal#invitationModal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title Invite Colleague    
      = form_for [:business, @invitation] do |f|      
        .modal-body
          %fieldset
            .form-group.col-md-10
              = f.text_field :recipient_email, class: "form-control", placeholder: "Add a member by using their e-mail" 
              = f.hidden_field :job, value: @job.id
        .modal-footer
          = f.submit "Invite Colleague", class: "btn submit-button"

          