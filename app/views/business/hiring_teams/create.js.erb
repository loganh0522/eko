<% if @errors.present? %>
  <% @errors.each do |error| %>
    $('#<%= error[0] %>_msgBlock').append('<div class="notice"><%= escape_javascript(error[1]) %></div>');
    $('.stage-form').find('#<%= error[0] %>_Block').addClass('has-error');
  <% end %>
<% else %>
  $('.user-list').html('<%= j render "hiring_team", hiring_teams: @hiring_teams %>');
  $('#basic-form-modal').modal("hide");
<% end %>


