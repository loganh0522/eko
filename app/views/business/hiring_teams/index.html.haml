.page-header
  %h2 Create a Job
#main-container
  #padding
    .side-container#job-nav
      = render 'business/shared/post_job'
    .main-container#main-border
      .standard-header
        %h2 Hiring Team
        = link_to "+ Invite New User", new_business_invitation_path(job: @job), class: 'btn border-button', remote: true
        .add-team-member-search
          .show-hidden-search-box  
            = link_to "+ Team Member", "#", class: 'btn border-button'  
          .hidden-search-box
            = form_tag autocomplete_business_users_path, :method => 'get', id: "search-form" do
              = text_field_tag "query", nil, placeholder: "Search Users", class: "search-field-auto", autocomplete: 'off'
              = hidden_field_tag :job_id, @job.id
            #search-results-users
            .users
              = render 'business/users/search_box_users'
      .user-list
        = render "hiring_team"
      

.modal#basic-form-modal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title  
