.post-job-container
  .toggle-actions 
    = link_to business_job_job_feeds_path(@job) do 
      .toggle-filter#free.activated Free Job Boards
    = link_to business_job_premium_boards_path(@job) do 
      .toggle-filter#premium Premium Job Boards
  #free-boards
    .job-feed-container#adzuna-container
      .header
        %img(src="/tmp/ZipRecruiter_logo.png")
      .body
        - if @job.job_feed.ziprecruiter == false
          = link_to "Post Job", business_job_job_feed_path(@job, @job_feed, job_feed: { ziprecruiter: true}), method: :put, remote: true, class: 'btn submit-button'
        - else 
          .posted 
            %i.fa.fa-check-circle
            .title Posted 
