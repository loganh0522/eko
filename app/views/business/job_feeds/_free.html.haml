    .header
      %img(src="/tmp/adzuna_logo.png")
    .body
      - if @job.job_feed.adzuna == false 
        = link_to "Post Job", business_job_job_feed_path(@job, @job_feed, job_feed: { adzuna: true}), method: :put, remote: true, class: 'btn submit-button'
