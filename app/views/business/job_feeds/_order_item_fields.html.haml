%fieldset.order-item{:id => "order_#{board.name}"}
  .toprow
    .name= board.name
    .price
      .cost= "$#{price.price}"
      = link_to "", '#', class: "remove_from_cart glyphicon glyphicon-remove" 
  .bottom
    .type= "#{price.duration} Posting"
  = f.hidden_field :_destroy
  = f.hidden_field :unit_price, value: price.price, class: 'unit-price'
  = f.hidden_field :posting_duration_id, value: price.id
  = f.hidden_field :premium_board_id, value: board.id
