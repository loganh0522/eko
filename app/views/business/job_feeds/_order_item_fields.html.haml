%fieldset.order-item{:id => board.name}
  .toprow
    .name= board.name
    .price
      .cost= "$#{board.price}"
      = link_to "", '#', class: "remove_from_cart glyphicon glyphicon-remove" 
  .bottom
    .type 30 Day Posting
  = f.hidden_field :_destroy
  = f.hidden_field :unit_price, value: board.price, class: 'unit-price'
  = f.hidden_field :premium_board_id, value: board.id
