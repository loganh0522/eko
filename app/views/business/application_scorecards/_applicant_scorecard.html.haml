.scorecard
  .header
    %h4 Application Scorecard
    - if @scorecard.scorecard_sections.present?
      .my-scorecard
        - if @current_user_scorecard.present? 
          = link_to "My Scorecard", edit_business_job_application_application_scorecard_path(@job, @application, @current_user_scorecard), {:data => {:toggle => "modal", :target => "#edit_scorecardModal"}} 
          = render "business/application_scorecards/edit_my_scorecard" 
        - else 
          = link_to "My Scorecard", new_business_job_application_application_scorecard_path(@job, @application), {:data => {:toggle => "modal", :target => "#scorecardModal"}} 
          - if @scorecard.scorecard_sections.present?
            = render "business/application_scorecards/my_scorecard" 
  - if @scorecard.scorecard_sections.present?  
    .scorecard-details
      %h4 Overall Rating 
      .overall-rating 
        %table.table
          %tbody
            %tr
              %td(width="30%") Recommended 
              %td(width="70%")
                =image_tag @bar_chart_1, class: 'chart1'
            %tr
              %td(width="30%") Good
              %td(width="70%")
                =image_tag @bar_chart_2, class: 'chart2'
            %tr
              %td(width="30%") Bad
              %td(width="70%")
                =image_tag @bar_chart_3, class: 'chart3'
            %tr
              %td(width="30%") Do not Recommend 
              %td(width="70%")
                =image_tag @bar_chart_4, class: 'chart4'
      /   .row
      /     .rating-title
      /       Recommended
      /     .rating-total(width= '#{@recommended}%')
      /       .rating(width= '#{@recommended}%')
      /     .rating-percentage
      /       = "#{@recommended}%"
      /   .row
      /     .rating-title
      /       Good
      /     .rating-total
      /       .rating(width= '#{@good}%')
      /     .rating-percentage
      /       = "#{@good}%"
      /   .row
      /     .rating-title
      /       Bad
      /     .rating-total
      /       .rating(width= '#{@bad}%')
      /     .rating-percentage
      /       = "#{@bad}%"
      /   .row
      /     .rating-title
      /       Not-Recommended
      /     .rating-total
      /       .rating(width= '#{@not_recommended}%')
      /     .rating-percentage
      /       = "#{@recommended}%"
      Scorecard 
      .sections
        - @sections.each do |section|
          %h4= section.body
          %table.table
            %tbody
              - section.section_options.each do |criteria|
                %tr
                  %td(width="30%")= criteria.body
                  %td(width="70%")
                    - @application_scorecards.each do |scorecard| 
                      - scorecard.scorecard_ratings.each do |rating|
                        - if rating.rating == 1 && rating.section_option_id == criteria.id
                          %i.glyphicon.glyphicon-remove
                        - elsif rating.rating == 2 && rating.section_option_id == criteria.id
                          %i.glyphicon.glyphicon-thumbs-down
                        - elsif rating.rating == 3 && rating.section_option_id == criteria.id
                          %i.glyphicon.glyphicon-thumbs-up
                        - elsif rating.rating == 4 && rating.section_option_id == criteria.id
                          %i.glyphicon.glyphicon-star
  - else 
    .not-present-container
      %p There are currently no completed scorecards for this applicant.