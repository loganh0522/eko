.page-header
  .dropdown 
    .dropdown
      .dropdown-button
        %h2= "#{current_company.name} Admin"
      .dropdown-content#myDropdown
        - current_company.subsidiaries.each do |subsidiary|
          = link_to "#{subsidiary.subsidiary.name}", business_assessment_templates_path(subsidiary: subsidiary.id) 
  .admin-nav
    %ul
      %li= link_to "Career Portal", business_job_board_path(current_company.job_board.id)
      %li= link_to "Templates", business_email_templates_path, class: 'active'
      %li= link_to "Settings", business_company_path(current_company)

.company-settings
  .side-container#job-nav
    = render 'business/shared/templates_sidebar'
  .main-container
    .standard-header
      %h3 Assessment Templates
      = link_to "+ Assessment", new_business_assessment_template_path(subsidiary: @subsidiary), remote: true, class: "btn border-button"
    .standard-body
      .templates
        = render "assessments"
      
