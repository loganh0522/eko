.interview-scorecard
  .header
    %h4= @interview_scorecard.interview_kit.title
    .my-scorecard
      - if @current_user_interview_scorecard.present? 
        = link_to "Edit My Scorecard", edit_business_interview_scorecard_path(@current_user_interview_scorecard), remote: true
      - else 
        = link_to "Create Scorecard", new_business_interview_scorecard_path(@interview_scorecard), remote: true 
  .scorecard-details
    - @interview_sections.each do |section|
      %h4 Questions
      - section.section_options.each do |criteria|
        .form-row#no-padding
          .question-header
            .question= criteria.body 
            - criteria.scorecard_ratings.each do |rating|
              - if rating.rating == 1 
                .scorecard-inputs
                  %i.glyphicon.glyphicon-remove
              - elsif rating.rating == 2 
                .scorecard-inputs
                  %i.glyphicon.glyphicon-thumbs-down
              - elsif rating.rating == 3 
                .scorecard-inputs
                  %i.glyphicon.glyphicon-thumbs-up
              - elsif rating.rating == 4 
                .scorecard-inputs
                  %i.glyphicon.glyphicon-star
          .rating-comments
            %p Show comments 
            .comments
              - criteria.scorecard_ratings.each do |rating|
                .rating-comment
                  = user_avatar(rating.user) 
                  .body
                    .name= rating.user.full_name
                    .content= rating.body
