.col-md-10.col-md-offset-1
  = render '/shared/errors', type: @job_posting

.container.well.col-md-10.col-md-offset-1
  = bootstrap_form_for @job_posting do |f|
    .fieldset
      .row
        .form-group.col-md-6
          = f.text_field :title, class: "form-control", label: "Job Title"
      .row
        .form-group.col-md-4
          = f.text_field :country, class: "form-control", label: "Country"
        .form-group.col-md-4
          = f.text_field :province, class: "form-control", label: "Province"
        .form-group.col-md-4
          = f.text_field :city, class: "form-control", label: "City"
      .row
        .form-group.col-md-12
          = f.text_area :description, rows: 12, class: "form-control", label: "Description"
      .row
        .form-group.col-md-12
          = f.text_area :benefits, rows: 12, class: "form-control", label: "Benefits"
      .row
        .col-md-1.col-md-offset-10
          = f.submit "Post Job", class: "btn btn-primary"
