= form_for [:business, @company], remote: true do |f|
  .modal-body
    .form-row-no-border
      = f.label :name, "Company Name"
      = f.text_field :name, label: "Company Name", id: "name_Block", placeholder: "Company Name"
      = f.label :address, "Company Address"
      = f.text_field :address, id: 'geocomplete2'
    .form-row-no-border
      = f.label :location, "City (Head Office)"
      = f.text_field :location, id: "geocomplete", autocomplete: "off", hide_label: true
    .form-row-no-border 
      = f.label :website, "Company Website"
      = f.text_field :website, label: false, placeholder: "Website", id: "website_Block"
    .form-row-no-border
      = f.label :size, "Company Size"
      = f.select :size, options_for_select(["1-20", "20-50", "51-200", "201-500", "501-1000", "1001-5000", "5001- 10,000", "10,000+"]), :prompt => "Choose Company Size" 


  .modal-footer
    = f.button "Update", class: "btn submit-button", data: {disable_with: "<i class='fa fa-spinner fa-spin'> </i> Saving..."}
    .btn.border-button.close-modal Cancel