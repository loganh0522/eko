.main-form-container
  .standard-header
    %h4 Create Job Template
  = form_for [:business, @job_template], remote: true do |f|
    .form-row-no-border
      = f.label :title, "Job Title"
      = f.text_field :title, autocomplete: "off", class: "title_Block"
      %span.error#title_msgBlock
    .form-row-no-border
      = f.label :description, "Job Description"
      = f.trix_editor :description
      %span.error#description_msgBlock
    .container-footer
      = f.submit @job_template.new_record? ? "Save" : "Update", class: "btn submit-button"
      .btn.border-button.remove-main-form Cancel
    
