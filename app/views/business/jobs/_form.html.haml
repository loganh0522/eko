
= bootstrap_form_for [:business, @job] do |f|
  .fieldset
    .row
      .form-group.col-md-6
        = f.text_field :title, class: "form-control", label: "Job Title"
    .row
      .form-group.col-md-6
        = f.text_field :location, class: "form-control", id: "geocomplete", label: "Location (City)", placeholder: "City Name"
      
      .form-group.col-md-6
        = f.text_field :address, class: "form-control", id: "geocomplete2", label: "Address", placeholder: "Enter the Address"

    .row
      .form-group.col-md-4
        = f.collection_select(:industry_ids, Industry.all, :id, :name, label: "Industry", :include_blank => true)
      .form-group.col-md-4
        = f.collection_select(:function_ids, Function.all, :id, :name, label: "Job Function", :include_blank => true)
      .form-group.col-md-4
        = f.collection_select(:job_kind_ids, JobKind.all, :id, :name, label: "Job Type", :include_blank => true)
    .row
      .form-group.col-md-4
        = f.collection_select(:education_level_ids, EducationLevel.all, :id, :name, label: "Education Level", :include_blank => "Choose...")
      .form-group.col-md-4
        = f.collection_select(:career_level_ids, CareerLevel.all, :id, :name, label: "Career Level")
    .row
      = f.text_area :description, :class => "tinymce", :rows => 40, :cols => 120
      = tinymce_assets        
      = tinymce 
    .row
      = hidden_field_tag :user_ids, current_user.id
      = f.hidden_field :company_id, value: current_company.id
      .col-md-1.col-md-offset-9
        = f.submit @job.new_record? ? "Create Job Posting" : "Save and Continue", class: "btn btn-primary"

