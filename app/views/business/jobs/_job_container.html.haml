.job 
  .job-header 
    .title 
      = link_to job.title, business_job_path(job)
    .location Toronto, On
    .posted-time Posted 10 minutes ago
    .actions
      = link_to edit_business_job_path(job.id) do
        %i.glyphicon.glyphicon-pencil
      = link_to '#' do
        %i.glyphicon.glyphicon-remove
  .job-body
    .btns
      = link_to 'Post to Job Boards', '#', class: 'button-mid'
      .dropdown.btn2
        %a.button-mid.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
          Actions
          %b.caret
        %ul.dropdown-menu
          %li
            %a= link_to "Edit Job Posting", edit_business_job_path(job.id)
          %li
            %a= link_to "Close Job", business_job_close_job_path(job), method: :post
          %li 
            %a= link_to "Archive Job", business_job_archive_job_path(job), method: :post


    
    .left-scroll.glyphicon.glyphicon-chevron-left
     
    
    %ul.job-stage-area
      .job-gallery
        %li.job_list_stage
          .number 53
          .name All Applicants
        - job.stages.each do |stage|  
          %li.job_list_stage
            .number 
              = stage.applications.count
            .name
              = stage.name
        %li.job_list_stage
          .number 53
          .name All Applicants
    .right-scroll
      .glyphicon.glyphicon-chevron-right