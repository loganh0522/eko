.contain 
  .sidebar    
    = link_to "Post a Job", new_business_job_path, class: 'button'
    .nav 
      %ul 
        %li 
          .content
            %i.glyphicon.glyphicon-briefcase
            My Jobs 
        .body
          %ul
            %li Open Job Postings
            %li Closed Job Postings
            %li Archived Job Postings
        %li 
          .content
            %i.glyphicon.glyphicon-list-alt
            Company Jobs
        %li 
          .content
            %i.glyphicon.glyphicon-user
            My Profile
    

  .main-container
    .header 
      %h1 Open Job Postings

    .body 
      - @jobs.each do |job|
        .job 
          .job-header 
            .title 
              = link_to job.title, business_job_path(job)
            .location Toronto, On
            .posted-time Posted 10 minutes ago
            .actions
              = link_to edit_business_job_path(job.id) do
                %i.glyphicon.glyphicon-pencil
              = link_to '#' do
                %i.glyphicon.glyphicon-remove
          .job-body
            .btns
              = link_to 'Post to Job Boards', '#', class: 'button-mid'
              .btn2
                = link_to 'Actions', '#', class: 'button-mid'
            %ul
              %li
                .number 53
                .name All Applicants
              - job.stages.each do |stage|  
                %li 
                  .number 
                    = stage.applications.count
                  .name
                    = stage.name

                


