.job-show-header
  .header
    .details
      %h1= @job.title
      %p= "#{@job.location}"
      = link_to "Job Link: #{@job.url}", "http://" + @job.url, :target => "_blank", class: "link"
    .links
      = link_to "Edit Job Details", edit_business_job_path(@job), class: "btn btn-primary"

  .job-stages

    .left_scroll
      %img(src="/tmp/left_arrow.png")
    
    %ul.job-stage-area
      .job-gallery
        %li#all_applicants.activated.job_list_stage
          .number 
            = @job.applications.count
          .name All Applicants
        - @stages.each do |stage| 
          %li.job_list_stage{:id => "#{stage.name}"}
            .number= stage.applicants.count
            .name= stage.name  
        %li.job_list_stage#Rejected
          .number 
            = @job.applications.where(rejected: true).count
          .name Rejected

    .right_scroll
      %img(src="/tmp/right_arrow.png")


  .job-applicants-nav
    %ul 
      %li.applicants-tab.activated Applicants
      %li.activity-tab Activity
      %li.calendar-tab Calendar


.job-applicants.active-tab
  = render 'business/shared/applicants_table'

.calendar-container
  = render 'business/calendar/job_calendar'

.job-activity
  = render 'business/activities/job_activity_feed'
    
