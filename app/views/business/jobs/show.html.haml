.job-show-header
  .header
    .details
      %h1= @job.title
      %p= "#{@job.city}, #{@job.states.first.name}, #{@job.countries.first.name}"
      = link_to "Job Link: #{@job.url}", "http://" + @job.url, :target => "_blank", class: "link"
    .links
      = link_to "Edit Job Details", edit_business_job_path(@job), class: "btn btn-primary"

  .job-stages

    .left_scroll
      %img(src="/tmp/left_arrow.png")
    
    %ul.job-stage-area
      .job-gallery
        %li#all_applicants.activated.job_list_stage
          .number 
            = @job.applications.count
          .name All Applicants
        - @stages.each do |stage| 
          %li.job_list_stage{:id => "#{stage.name}"}
            .number= stage.applicants.count
            .name= stage.name  
        %li.job_list_stage#Rejected
          .number 
            = @job.applications.where(rejected: true).count
          .name Rejected

    .right_scroll
      %img(src="/tmp/right_arrow.png")


  .job-applicants-nav
    %ul 
      %li.applicants-tab.activated Applicants
      %li.activity-tab Activity


.job-applicants.active-tab
  = render 'business/shared/applicants_table'

.job-activity
  .header
    %h1 Activity
  .body
    .activity-filters
      .nav
        %ul 
          %li 
            .content
              Filters
          .body
            %ul
              %li.activity 
                .checkbox{:data => {:id => "comments"}}= check_box_tag "", true, true
                Comments
              %li.activity
                .checkbox{:data => {:id => "scorecards"}}= check_box_tag "", true, true
                Scorecards
              %li.activity
                .checkbox{:data => {:id => "messages"}}= check_box_tag "", true, true
                Messages
              %li.activity
                .checkbox{:data => {:id => "move stages"}}= check_box_tag "", true, true
                Move Stages
              %li.activity
                .checkbox{:data => {:id => "applied"}}= check_box_tag "", true, true
                Applied
              %li.activity
                .checkbox{:data => {:id => "interview"}}= check_box_tag "", true, true
                Interview
    .job-activity-feed
      .activity-feed
        - @activities.each do |activity|         
          = render "business/activities/#{activity.trackable_type.underscore}/#{activity.action}", activity: activity  
