.job-show-header
  %h2= @job.title
  %h6= "#{@job.city}, #{@job.province}, #{@job.country}"

.job-stages  
  %ul 
    - @stages.each do |stage| 
      %li 
        %h6= stage.name
        %h4 50 

.job-applicants.col-md-10
  %table.table
    %thead
      %tr
        %th(width="10%") 
        %th(width="20%") Name 
        %th(width="20%") Job Title
        %th(width="20%") Stage 
        %th(width="15%") Rating
        %th(width="15%") Remove
    %tbody
      - @applicants.each do |applicant|
        %tr
          %td
          %td
            %h4= "#{applicant.first_name} #{applicant.last_name}"
            %h6 CEO - TalentWiz 
          %td
            %h4 Sales Manager
            %h6 May 22, 2015
          %td
            %h4 New Applicant

