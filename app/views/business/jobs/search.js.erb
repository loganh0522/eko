$('.jobs-container').html('<%= j render "business/jobs/jobs" %>');


<% if params[:status] == 'closed' %>
  $('#all').removeClass('toggle-showing')
  $('#open').removeClass('toggle-showing')
  $('#closed').addClass('toggle-showing')
<% else %>
  $('#all').removeClass('toggle-showing')
  $('#closed').removeClass('toggle-showing')
  $('#open').addClass('toggle-showing')
<% end %>