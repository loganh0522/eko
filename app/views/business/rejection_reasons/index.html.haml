.company-settings
  .side-container
    = render 'business/shared/admin_sidebar'
  .main-container
    .standard-header
      %h2 Application E-mail
      = link_to "Edit E-mail", edit_business_application_email_path(@email), :data => {:remote => true }, class: "btn border-button2"
    .templates-body#reasons
      = render "business/application_emails/email"

    .standard-header
      %h2 Rejection Reasons
      = link_to "Create Reason", new_business_rejection_reason_path, :data => {:remote => true }, class: "btn border-button2"
    .templates-body#reasons
      = render "business/rejection_reasons/rejection_reasons", rejection_reasons: @rejection_reasons


.modal#basic-form-modal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title