#all-candidates
  %h1 Schedule
  .actions
    = link_to "Create Interview", new_business_interview_invitation_path,  data: {:turbolinks => "false"}, remote: true, class: "btn border-button"
#main-container
  #calendar-container
    .side-container
      = form_tag business_interview_invitations_path, :method => 'get', id: "search-form" do
        = render 'filters'
    .main-container
      = render 'business/interview_invitations/interview_invitations'

.modal#basic-form-modal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title