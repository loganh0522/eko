<% if @errors.present? %> 
  <% @errors.each do |error| %>   
    if (!$('#<%= error[0] %>_Block').hasClass('has-error'))
      $('#<%= error[0] %>_msgBlock').append('<div class="notice"><%= escape_javascript(error[1]) %></div>');
      $('#<%= error[0] %>_Block').addClass('has-error');
      if (('<%= error[0] %>' == 'message'))
        $('trix-editor').addClass('has-error');
      
    $('form').find('.error').each(function(){
      if ($(this).prev().val().length > 0 ){
        $(this).prev().removeClass('has-error');
        $(this).prev().prev().removeClass('has-error');
        $(this).find('.notice').remove();
      }
      else if ($(this).attr('id') == 'add_times_msgBlock' ) {
        if ($('#add_times_msgBlock').prev().prev().children().length > 0 ){
          $(this).prev().removeClass('has-error');
          $(this).find('.notice').remove();
        }
      }
    });
  <% end %>
<% else %>
  $('.largeModal').hide();
  $('#calendar-container').html('<%= j render "business/interview_invitations/interview_invitations", interviews: @interviews %>');
<% end %>

