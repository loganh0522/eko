<% if @errors.present? %> 
  <% @errors.each do |error| %>
    $('#<%= error[0] %>_Block').append('<div class="notice"><%= escape_javascript(error[1]) %></div>');
    $('#<%= error[0] %>_Block').addClass('has-error');
  <% end %>
<% else %>
  $('#basic-form-modal').modal("toggle");
  $('#calendar-container').html('<%= j render "business/interviews/interview_invitations", interviews: @interviews %>');
<% end %>

