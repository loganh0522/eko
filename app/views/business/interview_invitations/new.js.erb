<% if @candidate.present? %>  
  $('.action-area').html('<%= j render "business/interview_invitations/form" %>');
  $('.active-button').removeClass('active-button');
  $('#add-task').addClass('active-button');
<% else %>
  $('#basic-form-modal').find('form').remove()
  $('#basic-form-modal').find('.modal-title').html('<%= j "Schedule Event" %>');
  $('#basic-form-modal').find('.modal-header').after('<%= j render "business/interview_invitations/form" %>');
  $('#basic-form-modal').modal("toggle");
<% end %>
