.not-present-container
  = form_for [:business, @candidate, @resume],:html => { :multipart => true }, remote: true do |f| 
    %p There is currently no resume for this candidate.
    .add-object
      .col-md-6
        = f.file_field :name, id: "add-resume"
      .col-md-6
        = f.hidden_field :candidate_id, value: @candidate.id
        = f.submit "Add Resume", id: "submit-resume", class: "btn submit-button"