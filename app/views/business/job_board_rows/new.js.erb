  $(".modal-body").html('<%= j render "business/job_board_rows/text_form" %>');
  $(".modal-title").html('<%= "Create Section" %>');
  $('.modal').modal("toggle");
<% elsif @section_type == 'Video' %>
  $(".modal-body").html('<%= j render "business/job_board_rows/video_form" %>');
  $(".modal-title").html('<%= "Create Section" %>');
  $('.modal').modal("toggle");
<% elsif @section_type == 'Photo' %>
  $(".modal-body").html('<%= j render "business/job_board_rows/photo_form" %>');
  $(".modal-title").html('<%= "Add Photos Section" %>');
  $('.modal').modal("toggle");
<% elsif @section_type == 'Team' %>
  $(".modal-body").html('<%= j render "business/job_board_rows/team_form" %>');
  $(".modal-title").html('<%= "Add Team Members" %>');
  $('.modal').modal("toggle");
