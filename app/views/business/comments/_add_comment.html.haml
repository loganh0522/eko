.modal#add_commentModal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title Add Note 
      = form_tag add_note_multiple_business_applications_path do
        .modal-body
          .email-area
            .to 
              .title To:  
              .recipients   
            = text_area_tag :comment, nil, rows: 5, cols: 75, placeholder: "Type your comment..."
            = hidden_field_tag :applicant_ids
            = hidden_field_tag :job_id      
        .modal-footer 
          = submit_tag "Add Note", class: "btn submit-button"
          %input(type="" value="Cancel" class="btn border-button2")
