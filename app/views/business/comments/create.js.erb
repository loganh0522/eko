$('#comment-body').val('');
<% if params[:client_contact_id].present? %>
  $('.applicant-profile').html('<%= j render "business/comments/applicant_notes", application: @contact %>');
<% elsif @commentable.class == Job %> 
  $('#main-container').html('<%= j render "business/comments/job_comments" %>');
<% elsif @errors.present? %> 
  <% @errors.each do |error| %>
    $('#<%= error[0] %>_msgBlock').append('<div class="notice"><%= escape_javascript(error[1]) %></div>');
    $('#<%= error[0] %>_Block').addClass('has-error');
  <% end %>
<% else %>
  $('#basic-form-modal').modal("toggle");
  $('.applicant-main-container').html('<%= j render "business/comments/notes", comments: @comments %>');
<% end %>




