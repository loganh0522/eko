$('#comment-body').val('');
<% if params[:client_contact_id].present? %>
  $('.applicant-profile').html('<%= j render "business/comments/applicant_notes", application: @contact %>');
<% elsif @commentable.class == Job %> 
  $('#main-container').html('<%= j render "business/comments/job_comments" %>');
<% else %>
  $('.applicant-profile').html('<%= j render "business/comments/applicant_notes", comments: @comments %>');
<% end %>



