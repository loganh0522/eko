<% if @commentable.class == Job %> 
  $('#main-container').html('<%= j render "business/comments/job_comments" %>');
  $('.change-containers-nav').find('.activated').removeClass('activated');
  $('.change-containers-nav').find('#job-notes').addClass('activated');
<% elsif @commentable.class == Client %> 
  $('#main-container').html('<%= j render "business/comments/job_comments" %>');
  $('.change-containers-nav').find('.activated').removeClass('activated');
  $('.change-containers-nav').find('#job-notes').addClass('activated');
<% else %> 
  $('.applicant-main-container').html('<%= j render "business/comments/notes" %>');
  $('.applicant-nav').find('.activated').removeClass('activated');
  $('.applicant-nav').find('#notes').addClass('activated');  
<% end %>