.comment-area
  = form_for [:business, @comment], remote: true do |f|
    = f.text_area :body, id: "comment-body", rows: 12, cols: 12, placeholder: "Add a Note "

    .comment-area-footer
      = f.submit @comment.new_record? ? "+ Add Note" : "Update", class: "btn submit-button", id: "submit-comment-btn"
      = link_to "Cancel", "#", remote: true, class: 'btn border-button2'
      = f.hidden_field :user_id, value: current_user.id
      = f.hidden_field :commentable_type, value: @commentable
      = f.hidden_field :commentable_id, value: @application.id