.comment-area
  = form_for [:business, @commentable, @comment], remote: true do |f|
    = f.trix_editor :body, id: "body_Block", class: "comment-body", rows: 10, cols: 8, placeholder: "Add a Note"
    %span#body_msgBlock
    .comment-area-footer
      = f.submit @comment.new_record? ? "+ Add Note" : "Update", class: "btn submit-button", id: "submit-comment-btn"
      = link_to "Cancel", '#', class: "btn border-button", id: "remove_form"
      = f.hidden_field :user_id, value: current_user.id
      - if @job.present? 
        = f.hidden_field :job_id, value: @job.id
