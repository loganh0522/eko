.comment-area
  = form_for [:business, @commentable, @comment], remote: true do |f|
    = f.text_area :body, id: "body_Block", class: "comment-body", rows: 12, cols: 12, placeholder: "Add a Note"
    %span#body_msgBlock
    .comment-area-footer
      = f.submit @comment.new_record? ? "+ Add Note" : "Update", class: "btn submit-button", id: "submit-comment-btn"
      - if @comment.new_record? 
        .btn.border-button2.hide-can-form Cancel
      - else
        = link_to "Cancel", '#', class: "remove_form btn border-button2"
      = f.hidden_field :user_id, value: current_user.id
      
      - if @job.present? 
        = f.hidden_field :job_id, value: @job.id
