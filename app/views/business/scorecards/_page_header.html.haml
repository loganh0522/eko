.standard-header   
  %h2 Scorecard    
  - if @scorecard.present? 
    = link_to "+ Edit Scorecard", edit_business_job_scorecard_path(@job, @scorecard), class: "btn border-button2", remote: true
  - else 
    = link_to "+ Create Scorecard", new_business_job_scorecard_path(@job), class: "btn border-button2", remote: true
.job_scorecard  
  - if @job.scorecard.present?  
    = render 'business/scorecards/scorecard'
  - else 
    .not-present-container
      %p There is currently no scorecard for this job. 
      = link_to "+ Create Scorecard", new_business_job_scorecard_path(@job), remote: true