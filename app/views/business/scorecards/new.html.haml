.contain
  .sidebar
    = render 'business/shared/post_job'

  .main-container 
    .header  
      %h1 Scorecard
    .body
      .job_scorecard
        = form_for [:business, @job, @scorecard] do |f|
          = f.fields_for :scorecard_sections, ScorecardSection.new do |q| 
            = render "scorecard_section_fields", f: q       

          = link_to_add_fields "+ Add Section", f, :scorecard_sections  
          = f.hidden_field :job_id, value: @job.id

          .actions
            = f.submit "Create Scorecard", class: "submit btn btn-primary"
            = link_to "Delete Form", '#', remote: true, method: :delete, class: "btn btn-default"