.question-area 
  .fieldset.questions 
    .question-header
      .section-title= "#{@scorecard.scorecard_sections.first.body}"   
      = link_to "Remove", '#', class: "remove_question"
    = f.text_field :body, class: "form-control questions", placeholder: "Scorecard Section Name"
    = f.hidden_field :_destroy
  
  %p Criteria 
  = f.fields_for :section_options, class: "options" do |a|
    = render 'section_option_fields', f: a
  
  = link_to_add_fields("+ Add Criteria", f, :section_options)
