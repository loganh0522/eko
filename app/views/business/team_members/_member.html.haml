.team-member-contain{id: "team_member_#{@member.id}"}
  = image_tag @member.file.xs_image
  = fields_for "job_board_row[team_members_attributes][]", @member do |f|
    = f.text_field :name, autocomplete: 'off', name: "job_board_row[team_members_attributes][#{@member.id}][name]", id: "job_board_row_team_members_attributes_#{@member.id}_name", placeholder: "Name"
    = f.text_field :position, autocomplete: 'off', name: "job_board_row[team_members_attributes][#{@member.id}][position]", id: "job_board_row_team_members_attributes_#{@member.id}_position", placeholder: "Position"
    = f.text_area :details, name: "job_board_row[team_members_attributes][#{@member.id}][details]", id: "job_board_row_team_members_attributes_#{@member.id}_details", placeholder: "Details"
  = link_to "Destroy", business_team_member_path(@member), method: :delete, remote: true

