.question-area 
  .fieldset      
    .answer-type
      .title Question Type:
      = f.select :kind, ['Text (150 Characters)', 'Text (500 Characters)', 'Select', 'Multiselect', 'File'], {}, {:class => 'question-type'}
      .required-answer
        = f.check_box :required, checked_value: 1, unchecked_value: 0
        = f.label :required, "Required"       
    = f.text_field :body, class: "form-control question", placeholder: "Add your Question", autocomplete: 'off'
    = f.hidden_field :_destroy

  = f.fields_for :question_options, class: "options" do |a|
    = render 'question_option_fields', f: a
  = link_to_add_fields("+ Add Answer", f, :question_options)

  .footer
    = f.submit "Create", class: "btn submit-button"
    .btn.border-button.remove_question Cancel
