.applicants
  .applicant-table-body
    %table.table
      %thead
        %tr
          %th(width="1%")
            #select_all= check_box_tag 'Select All', class: 'select_all_applicants'
          %th(width="10%")
          %th(width="25%") Name 
          %th(width="30%") Applied To
          %th(width="20%") Stage 
          %th(width="15%") Rating
        %tbody
          .spinner
          .all_applicants_data
            - @candidates.each do |candidate|
              - if candidate.applications.present? 
                - if candidate.applications.first.stage.present?
                  - stage = candidate.applications.first.stage.name
                - elsif candidate.applications.first.rejected == true
                  - stage = "Rejected"
                - else 
                  - stage = "Applied"
              - else 
                - stage = "No Job Apps"
              %tr
                %td
                  .content
                    .applicant-checkbox{:data => {:id => candidate.id}}
                      = check_box_tag "applicant_ids[]", candidate.id, false, class: "checkbox"
                %td
                  = candidate_user_avatar(candidate)
                %td
                  .content
                    = link_to "#{candidate.full_name}", business_candidate_path(candidate.id), remote: true, class: "name", :data => {:id =>  "#{candidate.full_name} "}
                    - if candidate.current_jobs.present?
                      .bottom-content= "#{candidate.current_jobs.first.title} - #{candidate.current_jobs.first.company_name}"
                    - else
                      .bottom-content No Experience Listed
                  - if candidate.applications.present?
                    %td
                      .content
                        .position= candidate.applications.first.job.title
                        .bottom-content= candidate.applications.first.job.location
                    %td
                      .content
                        .position= stage
                        .bottom-content= "#{time_ago_in_words(candidate.created_at)} ago"
                    %td
                      .content
                        = render 'business/ratings/form', application: candidate.applications.first
                  - else
                    %td
                      .no-content
                        No Job Applications
                    %td
                      .no-content
                        No Job Applications
                    %td
                      .no-content
                        No Rating





