.fieldset.add-work-experience
  .row
    .col-md-6
      = f.text_field :school, class: "form-control", hide_label: true, placeholder: "School"
    .col-md-6
      = f.text_field :degree, class: "form-control", hide_label: true, placeholder:"Degree"
  .row
    .col-md-3.col-xs-6.col-sm-6
      = f.select :start_month, ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'Novemeber', 'December']
    .col-md-3.col-xs-6.col-sm-6
      = f.text_field :start_year, class: "form-control"
    .col-md-3.col-xs-6.col-sm-6
      = f.select :end_month, ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'Novemeber', 'December']
    .col-md-3.col-xs-6.col-sm-6
      = f.text_field :end_year, class: "form-control"
  .row
    .col-md-12
      = f.text_area :description, rows: 4, class: "form-control", hide_label: true, placeholder: "Description"
  .row
    = link_to "Remove Education", '#', class: "remove_fields btn border-button"