<% if params[:cv] == 'projects' %>
  $('.experience-container').html('<%= j render "business/shared_candidate/projects" %>')
  $('.toggle-actions').find('.activated').removeClass('activated');
  $('.toggle-actions').find('#projects').addClass('activated'); 
<% elsif params[:cv] == 'education' %>
  $('.experience-container').html('<%= j render "business/shared_candidate/educations" %>')
  $('.toggle-actions').find('.activated').removeClass('activated');
  $('.toggle-actions').find('#education').addClass('activated'); 
<% elsif params[:cv] == 'certification' %>
  $('.experience-container').html('<%= j render "business/shared_candidate/certifications" %>')
  $('.toggle-actions').find('.activated').removeClass('activated');
  $('.toggle-actions').find('#certification').addClass('activated'); 
<% elsif params[:cv] == 'experience' %>
  $('.experience-container').html('<%= j render "business/shared_manual_candidate/work_experience" %>')
  $('.toggle-actions').find('.activated').removeClass('activated');
  $('.toggle-actions').find('#experience').addClass('activated'); 
<% elsif params[:cv] == 'modal' %>
  $('#applicant-modal').modal('show')
  $('#applicant-modal').find('.modal-body').html('<%= j render "business/candidates/show_candidate/show_candidate" %>')
<% else %>
  $('.display-applicant-details').html('<%= j render "business/candidates/show_candidate/candidate_profile" %>')
  $('.applicant-nav').find('.activated').removeClass('activated');
  $('.applicant-nav').find('#profile').addClass('activated');  
<% end %>

