.side-section
  %h4 Tags
  .tags
    / = render "business/tags/tags"
  .add_tag
    / = link_to "+ Add Tag", new_business_job_application_tag_path(@job.id, @application.id), :data => {remote: true}, id: 'add_tag'
.side-section
  %h4 All Applications
  - @candidate.applications.each do |application| 
    .application-container
      .title= application.job.title
      .location= application.job.location

  = link_to 'Add to Job', new_business_candidate_application_path(@candidate), remote: true

