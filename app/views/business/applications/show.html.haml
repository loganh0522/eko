.applicant-view
  .home-page-header
    %h1= "#{@job.title}"
  .side-container
    = render 'business/applications/application_side_container'
  .applicant-profile-information
    .applicant-main-top
      = render 'business/applications/application_navigation'
    .applicant-details#main-container
      .profile-container.showing
        .applicant-experience
          = render 'business/applications/application_experience'
        .applicant-experience    
          = render 'business/applications/application_education'

      .messages-container
        .activity-feed
          = render "business/messages/applicant_messages", application: @application

      .notes-container
        .activity-feed
          = render "business/comments/applicant_notes", application: @application

      .assessments-container
        .applicant-scorecard
          = render "business/assessments/applicant_assessment"

      .scorecards-container
        .applicant-scorecard
          = render "business/application_scorecards/applicant_scorecard"

      .activity-container
        .activity-feed        
          = render "business/activities/application_activity", application: @application

  


  .modal#myModal
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
          %h4.modal-title  
        .modal-body
.footer 

