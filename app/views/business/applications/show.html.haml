
.applicant-view
  .applicant-main-container
    .applicant-header
      .user-image
        %img.circle(src="/tmp/man.jpg")
      
      .applicant-details
        %h3 Logan Houston 
        %p.location Toronto, Ontario, CA
        %p loganh0522@gmail.com
        %p 416-806-6907 
      
    .applicant-nav-bar  
      .ul 
        .li Profile
        .li Message 
        .li Notes
        .li Assessments 
        .li Scorecard

    .applicant-experience
      .header
        %h3 Experience
      
      .experience
        = render 'job_seeker/profiles/experience'

  .applicant-side-container
    .current-stage
      %h4= "Current Stage: #{@stage.name}"

      = form_tag business_job_application_move_stages_path(@job.id, @application) do
        %input(type="submit" value="Move to Next Stage" class="btn btn-success")

      = form_tag sort_business_job_stages_path do
        %input(type="submit" value="X Reject" class="btn btn-danger")

    .add-task
      %h4 Add a Task
      %p Create a task for this applicant. Tag a team member using @name to notify them of the task.
      = form_tag do
        = text_area_tag(:q)


    

.footer 
