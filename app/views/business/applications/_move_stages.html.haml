.modal#stageModal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title Move Applicants 
      = form_tag update_multiple_business_applications_path do  
        .modal-body 
          .email-area
            .to
              .title
                Moving: 
              .recipients
            .choose-stage
              .title
                %h4 Stage: 
              .stages-select
                = select_tag "stages", options_for_select(@job.stages.collect{ |u| [u.name, u.id] } + ["Rejected"])

            = hidden_field_tag :applicant_ids
        .modal-footer
          = submit_tag "Move Stages", class: "btn submit-button"
          %input(type="submit" value="Cancel" class="btn border-button2")
          

     