.modal#stageModal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title Move Applicants 
      = form_tag move_stages_business_applications_path, remote: true do  
        .modal-body 
          .email-area
            .to
              .title
                Moving: 
              .recipients
            .choose-stage
              .title
                %h4 Stage: 
              .stages-select
                = select_tag "stages", options_for_select(@job.stages.collect{ |u| [u.name, u.id] } + ["Rejected"])

            = hidden_field_tag :applicant_ids
            = hidden_field_tag :job, @job.id
        .modal-footer
          = submit_tag "Move Stages", class: "btn submit-button"
          .btn.border-button2{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Cancel
          

     