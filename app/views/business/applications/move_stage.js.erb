<% if params[:applicant_ids].present? %>
  $('.main-container').html('<%= j render "business/applications/job_applications/applications_table", applications: @candidates %>');
  $('.pagination-container').html('<%= j render "business/candidates/candidate_table/pagination", candidates: @candidates %>')
  $('.job-stages').html('<%= j render "business/applications/job_applications/job_stages", job: @job %>');
  $('.smallModal').hide();
  $('.smallModal').find('form').remove();
<% else %> 
  $('#applicant-stage').html('<%= j render "business/applications/show_application/application_stage" %>');
  $('.side-tasks').html('<%= j render "business/tasks/candidate_tasks", tasks: @tasks %>')
  $('.display-applicant-details').html('<%= j render "business/applications/show_application/process" %>')
  $('#quickscreen-side-container').find('#candidate_<%= @application.id %>').remove()
  $('.job-stages').html('<%= j render "business/applications/job_applications/job_stages" %>')
<% end %> 

