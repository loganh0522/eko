.job-show-header
  %h2= @job.title
  %h6= "#{@job.city}, #{@job.province}, #{@job.country}"

  .job-stages  
    %ul 
      %li 
        %h6 All applicants
        %h4 50 
      - @stages.each do |stage| 
        %li 
          %h6= stage.name
          %h4= stage.applicants.count 

.job-applicants
  %h1 Applicants  
  %form_tag   
    = link_to "Move Stages", move_multiple_business_job_applications_path(@job), {:data => {:toggle => "modal", :target => "#stageModal"}}

    = render "move_stages"
    %table.table
      %thead
        %tr
          %th(width="1%") 
          %th(width="5%")
          %th(width="20%") Name 
          %th(width="20%") Job Title
          %th(width="20%") Stage 
          %th(width="20%") Rating
          %th(width="5%") Remove
      %tbody
        - @applicants.each do |applicant|
          %tr
            %td.checkbox{:data => {:id => applicant.id}}
              = check_box_tag "applicant_ids[]", applicant.id
            %td
              %img.circle(src="/tmp/man.jpg")
            %td
              %h4= link_to "#{applicant.first_name} #{applicant.last_name}", business_job_application_path(@job, Application.where(user_id: applicant.id, job_id: @job).first.id)
              %h6 CEO - TalentWiz 
            %td
              %h4 Sales Manager
              %h6 May 22, 2015
            %td
              %h4 New Applicant