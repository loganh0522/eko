.job-show-header
  .header
    .details
      %h1= @job.title
      .location= "#{@job.location}"
      .job-link
        = link_to "http://" + @job.url, :target => "_blank", class: "link" do
          .glyphicon.glyphicon-link
  .change-containers-nav
    %ul 
      = link_to business_job_applications_path(@job), class: 'change-aj', remote: true do 
        %li#all-job-applicants.activated Applicants
      = link_to business_job_activities_path(@job), class: 'change-aj', remote: true do 
        %li#job-activity-feed Activity   
      = link_to business_job_tasks_path(@job), class: 'change-aj', remote: true do 
        %li#job-tasks Tasks
      = link_to business_job_comments_path(@job), class: 'change-aj', remote: true do 
        %li#job-notes Notes
      = link_to business_job_interviews_path(@job), class: 'change-aj', remote: true do 
        %li#interviews Interviews
      = link_to edit_business_job_path(@job), class: 'change-aj', remote: true do 
        %li#job-details Job Details

#main-container
  = render "business/candidates/app_new_modal"
  = render 'business/applications/job_applications/all_applications_table'


