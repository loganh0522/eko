= form_for @application, :url => create_multiple_business_applications_path, remote: true do |f|
  .modal-body
    .email-area
      .to 
        .recipients   
      .form-row-no-border
        = f.label :job_id, "Add To Job"
        = f.collection_select(:job_id, current_company.open_jobs, :id, :title, label: "Move to Job", :include_blank => true)
        = hidden_field_tag :applicant_ids
  .modal-footer 
    = f.button "Add To Job", class: "btn submit-button", data: {disable_with: "<i class='fa fa-spinner fa-spin'> </i> Adding..."}
    .btn.border-button.close-modal Cancel