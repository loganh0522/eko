.application-stages
  
  .app-stage
    .app-stage-header
      .body
        Applied
      %i.fa.fa-angle-down.toggle
    .app-stage-body
      = render 'business/applications/process/application_form'

  
  - @stages.each do |stage|
    - if stage == @application.stage
      .app-stage.current-stage
        .app-stage-header
          .body
            = "#{stage.name}    (Current Stage) "
          %i.fa.fa-angle-up.toggle
        .app-stage-body.current-stage
          - stage.stage_actions.each do |action| 
            - if action.kind == 'Task'
              = render 'business/applications/process/task_action', action: action
            - elsif action.kind == 'Interview'
              = render 'business/applications/process/interview_action', action: action
    - else
      .app-stage
        .app-stage-header
          .body
            = stage.name
          %i.fa.fa-angle-down.toggle
        .app-stage-body
          - stage.stage_actions.each do |action| 
            - if action.kind == 'Task'
              = render 'business/applications/process/task_action', action: action
            - elsif action.kind == 'Interview'
              = render 'business/applications/process/interview_action', action: action

  .app-stage
    .app-stage-header
      .body
        Hired
      %i.fa.fa-angle-down.toggle
    .app-stage-body
      
  .app-stage
    .app-stage-header
      .body
        Rejected
      %i.fa.fa-angle-down.toggle
    .app-stage-body