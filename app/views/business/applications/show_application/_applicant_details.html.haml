- if @application.candidate.manually_created == true
  .user-image
    .profile_picture
      %img(src="/tmp/blank_profile_picture.png")
  .applicant-details
    .name-rating
      .name= "#{@application.candidate.full_name.capitalize}"
      / = render 'business/ratings/form', application: @application
    .current-position
    .contact-details
      .glyphicon.glyphicon-earphone 
        = "#{@candidate.phone}"
      %br
      .glyphicon.glyphicon-envelope
        = "#{@application.candidate.email}"
      %br
      - if @application.candidate.location.present?
        .glyphicon.glyphicon-map-marker
          = "#{@application.candidate.location}"
  .actions
    .dropdown
      .dropdown-button.border-button
        Actions
        %i.fa.fa-ellipsis-h.fa-lg
      .dropdown-content#myDropdown
        = link_to edit_business_candidate_path(@application.candidate.id), remote: true do
          %i.fa.fa-pencil
          .action Edit
        = link_to business_candidate_path(@application.candidate.id), remote: true, :method => :delete do  
          %i.fa.fa-trash-o
          .action Destroy 


- else
  .user-image
    .profile_picture
      - if @application.candidate.user.user_avatar.present?
        = image_tag @application.candidate.user.user_avatar.image.large_image 
      - else 
        %img(src="/tmp/blank_profile_picture.png")
  .applicant-details
    .name-rating
      .name= "#{@application.candidate.user.full_name}"
      / = render 'business/ratings/form', application: @application
    .current-position
      - if @application.candidate.user.current_jobs.present?
        = "#{@application.candidate.user.current_jobs.first.title}  #{@application.candidate.user.current_jobs.first.company_name} "
    .contact-details
      .glyphicon.glyphicon-earphone 
        = "#{@application.candidate.user.phone}"
      %br
      .glyphicon.glyphicon-envelope
        = "#{@application.candidate.user.email}"
      %br
      - if @application.candidate.user.location.present? 
        .glyphicon.glyphicon-map-marker
          = "#{@application.candidate.user.location}"