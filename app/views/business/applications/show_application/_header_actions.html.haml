.top-row
  .stage
    .select-stage= select_tag "stages", options_for_select(["Applied"] + @job.stages.collect{ |u| [u.name, u.id, { 'data-id' => u.id, 'data-application' => @application.id }] }, @application.stage.present? ? @application.stage.id : 1 ), id: 'move-applicant-stages'
  .stage
    .dropdown#reject
      %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
        Reject
        %b.caret
      %ul.dropdown-menu.dropdown-menu-right
        - @rejection_reasons.each do |reason| 
          %li
            %a= link_to "#{reason.body}", business_job_application_reject_path(@job, @application, :val => reason.body), remote: true, method: :post 
  .stage
    .glyphicon.glyphicon-trash

.bottom-row
  .stage
    = link_to new_business_application_task_path(@application), remote: true do 
      .glyphicon Task
  .stage 
    = link_to new_business_application_comment_path(@application), remote: true do
      .glyphicon Note
  .stage
    = link_to new_business_candidate_interview_path(@candidate, application: @application.id), remote: true do 
      .glyphicon.glyphicon-calendar
  .stage
    = link_to new_business_candidate_message_path(@candidate), remote: true do 
      .glyphicon.glyphicon-envelope 
  .stage
    = link_to new_business_candidate_application_path(@candidate), remote: true do 
      .glyphicon.glyphicon-share-alt 
  

