/ .change-containers-nav
/   %ul 
/     = link_to business_candidate_tasks_path(@candidate, job: @job), remote: true do
/       %li.change#tasks.activated Active

/     = link_to business_candidate_tasks_path(@candidate, status: "complete", job: @job), remote: true do
/       %li.change#completed-tasks  Complete

= form_tag search_business_tasks_path, :method => 'get', id: "search-form" do
  .toggle-actions 
    = radio_button_tag "task", "all", true, class: 'filter'
    = label_tag "task_all", "Active", :value => "all", class: 'filter'
    
    = radio_button_tag "task", "complete", false, class: 'filter'
    = label_tag "task_complete", "Complete", :value => "open", class: 'filter'

.tasks
  - if @tasks.present? 
    - @tasks.each do |task| 
      = render 'business/tasks/candidate_task', task: task
  - else 
    .not-present-container
      %p No Tasks Present