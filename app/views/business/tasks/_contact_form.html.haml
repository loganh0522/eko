.comment-area
  = form_for [:business, @client, @contact, @task], html: {remote: true} do |f|
    / = f.text_area :body, id: "comment-body", rows: 12, cols: 12, placeholder: "Add a Note about #{@contact.first_name} #{@contact.last_name}"
    / %div.ui-autocomplete-input.user-comment#comment-body{:contentEditable => true, :placeholder => "Add a note about #{@application.applicant.first_name} #{@application.applicant.last_name} (@mention a teammate)", :data => {:job_id => @application.apps.id } }
    / %div#comment-team-members

    .comment-area-footer
      = f.submit @task.new_record? ? "+ Add Note" : "Update", class: "btn submit-button", id: "submit-comment-btn"
      = link_to "Cancel", "#", remote: true, class: 'btn border-button2'
      = f.hidden_field :user_id, value: current_user.id