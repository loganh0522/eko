= render 'business/clients/top_container'

#main-container
  #job-applicants
    .side-container
      = form_tag business_client_tasks_path(@client), :method => 'get', id: "search-form" do
        = render 'business/tasks/client_filters'
    .main-container#task-container
      = link_to "Create Task", new_business_client_task_path(@client),  data: {:turbolinks => "false"}, remote: true, class: "btn border-button2"
      = render 'business/tasks/tasks'

.modal#basic-form-modal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times
        %h4.modal-title