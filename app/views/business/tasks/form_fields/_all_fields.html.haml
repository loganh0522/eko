.form-row
  .contain-3
    .assign-to-row
      .title Assign Users (Team)
      .assign-user#user_ids_Block
        .show-hidden-search-box
          .add-button-search
            .glyphicon.glyphicon-plus
        .hidden-search-box
          = text_field_tag "", "", :class => 'ui-autocomplete-input users', :placeholder => 'Type a users name to assign', id: "autocomplete"
          #search-results-users
          .assigned-users
            .user-tag{:data => {id: current_user.id, kind: "user"}}
              .name= current_user.full_name
              .delete-tag &times
      .user-tag{:data => {id: current_user.id, kind: "user"}}
        .name= current_user.full_name
        .delete-tag &times
  .contain-3
    .assign-to-row
      .title Add Job
      .assign-user#user_ids_Block
        .show-hidden-search-box
          .plain-text 
            No Job Selected
            .caret
        .hidden-search-box
          .select-box
            .select-item{data: {:id => ''}} No Room
            - if current_company.open_jobs.present?
              - current_company.open_jobs.each do |job|
                .select-item{data: {:id => job.id}}= job.title
              = f.hidden_field :job_id, id: "select-box-field"
  .contain-3
    .assign-to-row
      .title Add Candidates
      .assign-user#user_ids_Block
        .show-hidden-search-box
          .add-button-search
            .glyphicon.glyphicon-plus
        .hidden-search-box#search-results-candidates
          = text_field_tag "", "", :class => 'ui-autocomplete-input candidates', :placeholder => 'Type a users name to assign', id: "autocomplete"

