<% if @taskable.class == Company %>
  <% if params[:status] == 'complete' %>
    $('.task-main-container').html('<%= j render "business/tasks/tasks" %>');
    $('.calendar-nav-actions').find('.activated').removeClass('activated');
    $('.calendar-nav-actions').find('#closed-tasks').addClass('activated');
  <% else %>
    $('.task-main-container').html('<%= j render "business/tasks/tasks" %>');
    $('.calendar-nav-actions').find('.activated').removeClass('activated');
    $('.calendar-nav-actions').find('#open-tasks').addClass('activated');
  <% end %>
<% elsif @taskable.class == Application %>
  $(".side-section").find(".tasks").html('<%= j render "business/tasks/application_tasks", tasks: @tasks %>');
<% else %> 
  $('#main-container').html('<%= j render "business/tasks/job_tasks", tasks: @tasks %>');
  $('.change-containers-nav').find('.activated').removeClass('activated');
  $('.change-containers-nav').find('#job-tasks').addClass('activated');
<% end %>

